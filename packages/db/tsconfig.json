{
  "extends": "tsconfig/internal-packages.json",
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "index.ts",
    "src",
    "src/**/*.ts",
    "src/*.ts",
    "global.d.ts"
  ]
}