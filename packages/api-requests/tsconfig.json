    "lib": [
      "ES6",
      "ES2015",
      "ES2016",
      "ES2022",
      "ES2018",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es5",
    "types": ["node"],
    "noEmit": false
