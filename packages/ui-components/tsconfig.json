{
  "compilerOptions": {
    "lib": [
      "ES6",
      "ES2015",
      "ES2016",
      "ES2022",
      "ES2018",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": ".",
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "tsconfig/base.json",
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}