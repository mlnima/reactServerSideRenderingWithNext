{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "expressServer",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "lib": [
      "es2017",
      "es2018",
      "es2021",
      "esnext.asynciterable",
      "esnext.array",
      "esnext.intl",
      "esnext.symbol",
      "scripthost"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}