{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "expressServer",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "lib": [
      "es2017",
      "es2018",
      "ES2021.String",
      "ESNext.AsyncIterable",
      "ESNext.Array",
      "ESNext.Intl",
      "ESNext.Symbol",
      "ScriptHost"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}