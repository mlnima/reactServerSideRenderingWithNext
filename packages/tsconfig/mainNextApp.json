{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "mainNextApp",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2016.Array.Include",
      "ScriptHost",
      "ES6"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@store/*": ["store/*"],
      "@store_toolkit/*": ["store_toolkit/*"],
      "@components/*": ["components/*"]
    }
  }
}