{
  "compilerOptions": {
    "lib": [
      "ES2015",
      "dom"
    ],
    "jsx": "react",
    "module": "es6",
    "outDir": "./dist",
    "target": "es5",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowJs": true,

  },
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "include": ["./src/**/*"]
}