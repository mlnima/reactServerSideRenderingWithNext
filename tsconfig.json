{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "sourceMap": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@store/*": [
        "store/*"
      ],
      "@store_toolkit/*": [
        "store_toolkit/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@_variables/*": [
        "_variables/*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "trash",
    "ZlegacyCodesAndComponents"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
