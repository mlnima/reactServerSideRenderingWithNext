{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "ES2015",
      "ES2018",
      "ES2022",
      "dom.iterable",
      "esnext",
      "ScriptHost",
      "ES2016.Array.Include"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@store/*": [
        "store/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@variables/*": [
        "variables/*"
      ]
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ]

}
