{
  "verbose": true,
  "ignore": [
    "node_modules",
    ".next",
    "./public/locales/*/customTranslation.json",
    "./tools/*"
  ],
  "watch": [
    "**/*",
    "./**/*"
  ],
  "execMap": {
    "ts": "ts-node"
  },
  "ext": "js,ts,json",
  "exec": "concurrently \"ts-node --transpile-only index.ts\"",
  "trace-warnings": true
}