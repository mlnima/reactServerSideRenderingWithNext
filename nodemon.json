{
  "verbose": true,
  "ignore": [
    "node_modules",
    ".next",
    "./public/locales/*/customTranslation.json"
  ],
  "watch": [
    "expressServer/**/*",
    "./expressServer/*",
    "./public/locales/*",
    "./nextConfigs/*",
    "./server.ts",
    "./next.config.js",
    "./.swcrc",
    "./.env",
    "./next-i18next.config.ts"

  ],
  "execMap": {
    "ts": "ts-node"
  },
  "ext": "js,ts,json",
  "exec": "concurrently \"ts-node --transpile-only ./expressServer/index.ts\" \"ts-node --transpile-only ./expressServer/socketServer/index.ts\"",
  "trace-warnings": true
}